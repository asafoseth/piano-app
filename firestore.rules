rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public read access to feedback votes and write access for voting
    match /feedback/{document} {
      allow read: if true;
      allow write: if true;
    }
    
    // Allow authenticated users to manage their own tab data
    match /tabData/{document} {
      allow read, write: if request.auth != null && request.auth.uid == resource.data.owner;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.owner;
    }
    
    // Allow test connection checks
    match /test/{document} {
      allow read: if true;
    }
    
    // Allow public read access to votes collection (alternative structure)
    match /votes/{document} {
      allow read: if true;
      allow write: if true;
    }
    
    // Block access to all other documents by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}